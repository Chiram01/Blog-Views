<div class="author" >
  <h1 class="author__heading">Blogs Views</h1>
  <p class="author__body">Blog Posting and Development</p>
</div>

<img src="https://picsum.photos/981/528" alt="Random image" class="hero-image" width="981" height="528">

<section class="articles">
  <h2 class="articles__heading">Recent Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %>">
          <span><%= post.title %></span>
          <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
        </a>
      </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; Older Posts</a>
  <% } %>
</section>
